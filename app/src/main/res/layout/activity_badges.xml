<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_circle3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:rotation="270"
        android:src="@drawable/ic_leaf"
        android:translationX="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBadges"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleBadges"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:text="Anonymous"
                    android:textColor="@color/black_txt_Color"
                    android:textSize="24sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/statueBadges"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:text="Anonymous"
                    android:textColor="@color/black_txt_Color"
                    android:textSize="15sp" />

                <TextView
                    android:padding="30dp"
                    android:id="@+id/descBadges"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:text="Anonymous"
                    android:textColor="@color/black_txt_Color"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>


<LinearLayout
    android:id="@+id/modifdefi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/modifier_votre_defis"
        android:theme="@style/PrimaryColorEditTextStyle">

        <EditText
            android:id="@+id/textDefis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:inputType="number"
            android:theme="@style/PrimaryColorEditTextStyle" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/radiogroupDefis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btnsemaine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primaryDarkColor"
                android:text="@string/semaine"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/black_txt_Color"
                android:fontFamily="@font/quicksand"/>

            <RadioButton
                android:id="@+id/btnmois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primaryDarkColor"
                android:text="@string/mont"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/black_txt_Color"
                android:fontFamily="@font/quicksand"/>

            <RadioButton
                android:id="@+id/btnannee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primaryDarkColor"
                android:text="@string/year"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/black_txt_Color"
                android:fontFamily="@font/quicksand"/>

        </RadioGroup>
        <TextView
            android:padding="30dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/black_txt_Color"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="@string/periodedef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:id="@+id/btnsavedef"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/launchchallenge"
        android:background="@drawable/bg_primary_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="30dp"/>


</LinearLayout>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>