<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_weight="1.9">
                <TextView
                    android:id="@+id/vehiculeTrajet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-Stop"
                    android:textSize="20sp"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/black_txt_Color"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/consommationTrajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consumption: 0g/CO2"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/black_txt_Color" />

                    <TextView
                        android:id="@+id/dateTrajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: 18/03/2020 19:52:29"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/black_txt_Color"/>

                    <TextView
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="14sp"
                        android:id="@+id/kilometreTrajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distance: 122 KM"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/black_txt_Color"/>
                    <TextView
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="14sp"
                        android:id="@+id/ecoTrajet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="122 g"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/black_txt_Color"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_weight="1.1"
                android:id="@+id/imageTrajet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_home_1"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
