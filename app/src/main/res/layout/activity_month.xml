<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthActivity">

    <ImageView
        android:id="@+id/iv_circle3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:rotation="270"
        android:alpha="0.9"
        android:src="@drawable/ic_leaf"
        android:translationX="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_circle1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:padding="8dp"
        android:rotation="60"
        android:src="@drawable/ic_leaf"
        android:translationX="-36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksand"
            android:text="@string/month"
            android:textColor="@color/black_txt_Color"
            android:textSize="50sp"
            android:textStyle="normal"
            tools:ignore="RtlCompat"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16.3dp"
            android:paddingTop="21dp"
            android:paddingEnd="16.3dp"
            android:paddingBottom="21dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_distance"
                android:tint="@color/primaryColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/total_kilometre"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/totKilometreMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="31.3dp"
                android:fontFamily="@font/quicksand"
                android:text="00"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16.3dp"
            android:paddingTop="21dp"
            android:paddingEnd="16.3dp"
            android:paddingBottom="21dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_co2"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/total_co2"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/totCO2Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="31.3dp"
                android:fontFamily="@font/quicksand"
                android:text="00"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16.3dp"
            android:paddingTop="21dp"
            android:paddingEnd="16.3dp"
            android:paddingBottom="21dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_onboard_1"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand"
                android:maxLines="1"
                android:text="@string/total_eco_co2"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/totecoCO2Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="31.3dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/black_txt_Color"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btninfomonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:foreground="?android:attr/selectableItemBackground"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>