<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryColorEditTextStyle">
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/black_txt_Color</item>
        <item name="android:textColor">@color/black_txt_Color</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="android:drawableTint">@color/primaryColor</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>
    <style name="WhiteColorEditTextStyle">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

</resources>
